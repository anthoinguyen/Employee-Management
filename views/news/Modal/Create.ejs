<div class="modal fade" id="addNews" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header" style="padding: 25px 25px 5px 25px">
        <h4 class="modal-title pull-left">Thêm tin tức</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <form method="POST" action="/tin-tuc" enctype="multipart/form-data">
        <div class="modal-body" style="padding-top: 15px">
          <div class="row">
            <div class="col-lg-8">
              <div class="form-group">
                <label for="" class="col-sm-12 control-label">Tiêu đề</label>
                <textarea id="titleNews" name="title" type="text" class="form-control" rows="1" placeholder=""
                  required></textarea>
              </div>
            </div>

            <div class="col-sm-4">
              <div class="form-group">
                <label for="">Ngày đăng</label>
                <div class="row ">
                  <div class="col-sm-12">
                    <input id="ngaybd" required type="date" name="createdDate" class="form-control" />
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-lg-4">
              <div class="form-group">
                <label for="exampleFormControlFile1">Nhập file</label>
                <input type="file" class="form-control-file" name="attached" id="Files">
              </div>
            </div>
            <div class="col-lg-4">
              <div class="form-group">
                <label for="exampleFormControlSelect1">Năm quản lý</label>
                <select class="form-control" id="yearId" name="yearId" required>
                </select>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="form-group">
                <label for="exampleFormControlSelect1">Loại tin tức</label>
                <select class="form-control" id="categoryId" name="categoryId" required>
                </select>
              </div>
            </div>
          </div>
          <input id="temp" type="text" name="description" class="form-control" hidden>
          <div class="row">
            <div class="col-lg-12">
              <div class="card-body" style="padding: 3px">
                <h4 class="card-title"></h4>
                <div id="summernoteExample">
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <div class="form-group">
                <label for="exampleFormControlFile1">Email</label>
                <input type="text" class="form-control-file" name="email">
              </div>
            </div>
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
          <button type="submit" class="btn btn-primary" id="createButtonNews">Tạo</button>
        </div>
      </form>
    </div>
  </div>
</div>