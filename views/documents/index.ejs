<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Quản lý Các văn bản, giấy tờ mẫu</title>
    <link rel="stylesheet" href="/vendors/iconfonts/mdi/css/materialdesignicons.min.css" />
    <link rel="stylesheet" href="/vendors/css/vendor.bundle.base.css" />
    <link rel="stylesheet" href="/vendors/css/vendor.bundle.addons.css" />
    <link rel="stylesheet" href="/vendors/iconfonts/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="/css/style_2.css" />
    <link rel="stylesheet" href="/css/style_1.css" />
    <link rel="shortcut icon" href="images/favicon.png" />
  </head>

  <body>
    <div class="container-scroller">
      <% include ../partials/_navbar %>
      <div class="container-fluid page-body-wrapper">
        <% include ../partials/_sidebar %>
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-6">
                        <h4 class="card-title">Danh sách giấy tờ mẫu</h4>
                      </div>
                      <div class="col-md-6 text-right">
                        <% if(roles == "ADMIN" ){%>
                        <button
                          type="button"
                          class="btn btn-primary btn-fw"
                          data-toggle="modal"
                          data-target="#createNewDocuments"
                        >
                          Thêm mới
                        </button>
                        <%}%>
                      </div>
                    </div>
                    <div class="table-responsive">
                      <table
                        class="table table-striped table-bordered"
                        id="table"
                      >
                        <thead>
                          <tr>
                            <th>
                              #
                            </th>
                            <th>
                              Tên giấy tờ mẫu
                            </th>
                            <th>
                              Phân loại
                            </th>
                            <th>
                              Nội dung
                            </th>
                            <th>
                              Ngày đăng
                            </th>
                            <th>
                              Hành động
                            </th>
                          </tr>
                        </thead>
                        <tbody>
                          <% documentList.map((item, index) => { %>
                          <tr>
                            <td class="py-1">
                              <%- index + 1 %>
                            </td>
                            <td>
                              <%- item.name %>
                            </td>
                            <td>
                              <% if (item.type) { %> 
                              <%- item.type.name %> 
                              <% } else { %> Không xác định 
                              <% } %>
                            </td>
                            <td>
                              <%- item.description %>
                            </td>
                            <td>
                              <%- item.createdDate.getDate() %> / <%- item.createdDate.getMonth() + 1 %> / <%- item.createdDate.getFullYear() %>
                            </td>
                            <td>
                              <button
                                type="button"
                                class="btn btn-icons btn-rounded btn-warning"
                                onclick="download('<%- item._id %>', '<%- item.documentName %>')"
                              >
                                <i class="fa fa-download"></i>
                              </button>
                              <button
                                type="button"
                                class="btn btn-icons btn-rounded btn-warning"
                                data-toggle="modal"
                                data-target="#editModal"
                                onclick="getDocs('<%- item._id %>')"
                              >
                                <i class="fa fa-edit"></i>
                              </button>
                              <button
                                type="button"
                                class="btn btn-icons btn-rounded btn-warning"
                                data-toggle="modal"
                                data-target="#deleteModal"
                                onclick="deleteDocsTemp('<%- item._id %>')"
                              >
                                <i class="fa fa-trash-o"></i>
                              </button>
                            </td>
                          </tr>
                          <% }) %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% include ../partials/_footer %>
        </div>
      </div>
    </div>

    <script src="/vendors/js/vendor.bundle.base.js"></script>
    <script src="/vendors/js/vendor.bundle.addons.js"></script>
    <script src="/js/hoverable-collapse.js"></script>
    <script src="/js/off-canvas.js"></script>
    <script src="/js/misc.js"></script>

    <% include ./createModal %> 
    <% include ./deleteModal %> 
    <% include ./editModal %> 
    <% include ../partials/scriptForAll %>
    <script>
      $(document).ready(function() {
        $("#table").DataTable();
      });
    </script>
    <script>
      var docsTemp;
      var editTemp;
      function deleteDocsTemp(id) {
        docsTemp = id;
      }
    </script>
    <script>
      $(function() {
        $.ajax({
          url: "/giay-to/type-of-documents",
          success: function(result) {
            result.data.length > 0
              ? result.data.map(item => {
                  $("#typeOfDocuments").append(
                    "<option value=" + item._id + ">" + item.name + "</option>"
                  );
                  $("#editTypeOfDocuments").append(
                    "<option value=" + item._id + ">" + item.name + "</option>"
                  );
                })
              : null;
          }
        });
      });
    </script>
    <script>
      function deleteDocs() {
        $.ajax({
          url: `/giay-to/${docsTemp}`,
          method: "DELETE",
          success: function(result) {
            if (result.data) {
              docsTemp = "";
              location.reload();
            }
          }
        });
      }
    </script>
    <script>
      function getDocs(id) {
        $.ajax({
          url: `/giay-to/${id}`,
          method: "GET",
          success: function(result) {
            editTemp = id;
            $("#editNameOfDocuments").val(result.data.name);
            $("#editDescription").val(result.data.description);
            $("#editTypeOfDocuments").val(result.data.type);
            if (result.data.documentLocalLink) {
              $("#editFileA").attr("href", result.data.documentLocalLink);
            } else {
              $("#editFileA").hide();
            }
          }
        });
      }
    </script>
    <script>
      function editDocs() {
        let formdata = new FormData();
        if ($("#editFile")[0].files[0] != undefined) {
          formdata.append("file", $("#editFile")[0].files[0]);
        }
        formdata.append("name", $("#editNameOfDocuments").val());
        formdata.append("type", $("#editTypeOfDocuments").val());
        formdata.append("description", $("#editDescription").val());
        let temp = {
          name: $("#editNameOfDocuments").val(),
          type: $("#editTypeOfDocuments").val(),
          description: $("#editDescription").val(),
          file: $("#editFile")[0].files[0]
        };
        $.ajax({
          url: `/giay-to/${editTemp}`,
          data: formdata,
          // dataType: 'json',
          contentType: false,
          // cache : false,
          processData: false,
          method: "PUT",
          success: function(result) {
            if (result.data) {
              editTemp = "";
              location.reload();
            }
          }
        });
      }
    </script>
    <script>
      function download(id, documentName) {
        $.ajax({
          url: `/giay-to/download/${id}`,
          method: "GET",
          xhrFields: {
            responseType: "blob"
          },
          success: function(result) {
            var a = document.createElement("a");
            var url = window.URL.createObjectURL(result);
            a.href = url;
            a.download = documentName;
            a.click();
            window.URL.revokeObjectURL(url);
          }
        });
      }
    </script>
  </body>
</html>
