<div class="modal fade" id="addGP" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title pull-left">Thêm giải pháp, sáng kiến</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-lg-7">
            <div class="table-responsive">
              <table id="selectGP" class="table table-striped">
                <thead>
                  <tr>
                    <th></th>
                    <th>Số hiệu cán bộ</th>
                    <th>Họ và tên</th>
                    <th>Khoa/phòng</th>
                  </tr>
                </thead>
                <tbody>
                  <% users.map((item,index) =>{%>
                    <% if(item.cuuNhanVien == false){%>
                  <tr>
                    <td><input class="case" type="checkbox" value="<%- item._id %>" />
                    </td>
                    <td>
                      <%- item.usersCardNumber %>
                    </td>
                    <td>
                      <%- item.name %>
                    </td>
                    <td>
                      <%- (item.belongToDepartment ? item.belongToDepartment.name : null) %>
                    </td>
                  </tr>
                  <%}%>
                  <%})%>
                </tbody>
              </table>
            </div>
          </div>
          <div class="col-lg-5">
            <div class="col-lg-12">
              <div class="col-lg-12 form-group">
                <label for="" class="control-label">
                  <p style="margin-bottom: 0px; margin-top: 0px">Năm</p>
                </label>
                <select id="namgiaiphap" class="text custom-select form-control">
                  <option value=""></option>
                  <%for( let i = timeYear; i >= 1975; i -- ) {%>
                  <option value="<%- i %>">
                    <%- i %>
                  </option>
                  <%}%>
                </select>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="form-group">
                <label for="" class="col-sm-12 control-label">Loại đề tài</label>
                <div class="col-sm-12">
                  <input id="loaiDetai" type="text" class="form-control" placeholder="">
                </div>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="form-group">
                <label for="" class="col-sm-12 control-label">Xếp loại</label>
                <div class="col-sm-12">
                  <input id="xepLoai" type="text" class="form-control" placeholder="">
                </div>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="form-group">
                <label for="" class="col-sm-12 control-label">Cấp</label>
                <div class="col-sm-12">
                  <input id="cap" type="text" class="form-control" placeholder="">
                </div>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="form-group">
                <label for="" class="col-sm-12 control-label">Tên sáng kiến, giải pháp</label>
                <div class="col-sm-12">
                  <textarea id="deTai" type="text" class="form-control text" rows="2"></textarea>
                </div>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="form-group">
                <label for="" class="col-sm-12 control-label">Ghi chú</label>
                <div class="col-lg-12">
                  <textarea id="ghiChu" type="text" class="form-control text" rows="3"></textarea>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        <button type="button" id="create_GP" class="btn btn-primary">Tạo</button>
      </div>
    </div>
  </div>
</div>