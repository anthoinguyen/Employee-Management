<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Giải pháp và sáng kiến</title>
  <link rel="stylesheet" href="/vendors/iconfonts/mdi/css/materialdesignicons.min.css">
  <link rel="stylesheet" href="/vendors/css/vendor.bundle.base.css">
  <link rel="stylesheet" href="/vendors/css/vendor.bundle.addons.css">
  <link rel="stylesheet" href="/vendors/iconfonts/font-awesome/css/font-awesome.css">
  <link rel="stylesheet" href="/css/style_2.css">
  <link rel="stylesheet" href="/css/style_1.css">
  <link rel="shortcut icon" href="/images/favicon.png" />
  <style>
    .table tbody tr.selected{
      background-color: #b9f7e1 !important;
      vertical-align: middle !important;
      height: 4em;
    }
</style>
</head>

<body>
  <div class="container-scroller">
    <% include ../../partials/_navbar %>
    <div class="container-fluid page-body-wrapper">
      <% include ../../partials/_sidebar %>
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4>DANH SÁCH GIẢI PHÁP VÀ SÁNG KIẾN</h4>
                  <div class="row" style="padding:5px">
                    <button style="margin:10px; width: 110px" class="btn btn-primary" type="button" style="margin: auto"
                      data-toggle="modal" data-target="#addGP">
                      <span class="icon-holder">
                        <i class="fa fa-plus"></i>
                      </span>
                      <span class="title">Thêm</span>
                    </button>
                  </div>
                  <%
                  let time = new Date();
                  let timeYear = time.getFullYear() %>
                  <div class="table-responsive">
                    <table id="list-GP" class="table table-bordered table-striped">
                      <thead>
                        <tr>
                          <th>Hành động</th>
                          <th>STT</th>
                          <th>Mã số cán bộ</th>
                          <th>Họ và tên</th>
                          <th>Loại đề tài</th>
                          <th>Đề tài</th>
                          <th>Xếp loại</th>
                          <th>Cấp</th>
                          <th>Năm</th>
                          <th>Ghi chú</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% solutions.map((item,index) =>{ %>
                        <tr>
                          <td>
                            <button type="button" class="btn btn-icons btn-rounded btn-outline-primary" data-toggle="modal"
                              data-target="#editGP" onclick="getGP('<%- item._id %>')">
                              <i class="fa fa-edit"></i>
                            </button>
                            <button type="button" class="btn btn-icons btn-rounded btn-outline-primary" data-toggle="modal"
                              data-target="#removeGP" onclick="removeGP('<%- item._id %>')">
                              <i class="fa fa-trash-o"></i>
                            </button>
                            <% if(item.confirmed==false){ %>
                            <button type="button" class="btn btn-icons btn-rounded btn-outline-primary" onclick="getGP('<%- item._id %>')"
                              data-toggle="modal" data-target="#editGP">
                              <i class="fa fa-check"></i>
                            </button>
                            <%}%>
                          </td>
                          <td>
                            <%- index + 1 %>
                          </td>
                          <td>
                            <%- item.user ? item.user.usersCardNumber : null %>
                          </td>
                          <td>
                            <%- item.user ? item.user.name : null %>
                          </td>
                          <td>
                            <%- item.loai %>
                          </td>
                          <td>
                            <%- item.ten %>
                          </td>
                          <td>
                            <%- item.xepLoai %>
                          </td>
                          <td>
                            <%- item.cap %>
                          </td>
                          <td>
                            <%- item.nam %>
                          </td>
                          <td>
                            <%- item.ghiChu %>
                          </td>
                        </tr>
                        <%})%>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% include ../../partials/_footer %>
      </div>
    </div>
  </div>

  <!-- Xoa -->
  <%- include ./Modal/delete %>

  <!-- Them -->
  <%- include ./Modal/create %>

  <!-- Edit -->
  <%- include ./Modal/edit %>
  <script src="/vendors/js/vendor.bundle.base.js"></script>
  <script src="/vendors/js/vendor.bundle.addons.js"></script>
  <script src="/js/off-canvas.js"></script>
  <script src="/js/misc.js"></script>
  <script src="/js/hoverable-collapse.js"></script>
  <script>
    $('#list-GP').DataTable({
      "scrollX": true,
    });
    $('#selectGP').DataTable();
  </script>
  <%- include ./script %>
  <% include ../../partials/scriptForAll %>

</body>

</html>