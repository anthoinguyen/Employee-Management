<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>Khóa đào tạo, bồi dưỡng</title>
    <link rel="stylesheet" href="/vendors/iconfonts/mdi/css/materialdesignicons.min.css" />
    <link rel="stylesheet" href="/vendors/css/vendor.bundle.base.css" />
    <link rel="stylesheet" href="/vendors/css/vendor.bundle.addons.css" />
    <link rel="stylesheet" href="/vendors/iconfonts/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="/css/style_2.css" />
    <link rel="stylesheet" href="/css/style_1.css" />
    <link rel="shortcut icon" href="/images/favicon.png" />
    <style>
      .table tbody tr.selected {
        background-color: #b9f7e1 !important;
        vertical-align: middle !important;
        height: 4em;
      }
    </style>
  </head>

  <body>
    <div class="container-scroller">
      <% include ../../partials/_navbar %>
      <div class="container-fluid page-body-wrapper">
        <% include ../../partials/_sidebar %>
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4>DANH SÁCH KHÓA ĐÀO TẠO, BỒI DƯỠNG CÁN BỘ</h4>
                    <div class="row" style="padding:5px">
                      <button
                        style="margin:10px; width: 110px"
                        class="btn btn-primary"
                        type="button"
                        style="margin: auto"
                        data-toggle="modal"
                        data-target="#addCourses"
                      >
                        <span class="icon-holder">
                          <i class="fa fa-plus"></i>
                        </span>
                        <span class="title">Thêm</span>
                      </button>
                    </div>
                    <div class="table-responsive">
                      <table
                        id="Courses"
                        class="table table-bordered table-striped"
                      >
                        <thead>
                          <tr>
                            <th>Hành động</th>
                            <th>STT</th>
                            <th>Mã số cán bộ</th>
                            <th>Họ và tên</th>
                            <th>Tên khóa đào tạo</th>
                            <th>Thời gian đào tạo</th>
                            <th>Nơi đào tạo</th>
                            <th>Nội dung đào tạo</th>
                            <th>Hình thức đào tạo</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% courses.map((item,index) =>{%>
                          <tr>
                            <td>
                              <button
                                type="button"
                                class="btn btn-icons btn-rounded btn-outline-primary"
                                onclick="editCourses('<%- item._id %>')"
                                data-toggle="modal"
                                data-target="#editCourses"
                              >
                                <i class="fa fa-edit"></i>
                              </button>
                              <button
                                type="button"
                                class="btn btn-icons btn-rounded btn-outline-primary"
                                onclick="removeCourses('<%- item._id %>')"
                                data-toggle="modal"
                                data-target="#removeCourses"
                              >
                                <i class="fa fa-trash-o"></i>
                              </button>
                              <% if(item.confirmed==false){ %>
                              <button
                                type="button"
                                class="btn btn-icons btn-rounded btn-outline-primary"
                                onclick="editCourses('<%- item._id %>')"
                                data-toggle="modal"
                                data-target="#editCourses"
                              >
                                <i class="fa fa-check"></i>
                              </button>
                              <%}%>
                            </td>
                            <td
                              data-toggle="modal"
                              data-target="#detailCourses"
                              onclick="getCourses('<%- item._id %>')"
                            >
                              <%- index + 1 %>
                            </td>
                            <td
                              data-toggle="modal"
                              data-target="#detailCourses"
                              onclick="getCourses('<%- item._id %>')"
                            >
                              <%- item.user ? item.user.usersCardNumber : null %>
                            </td>
                            <td
                              data-toggle="modal"
                              data-target="#detailCourses"
                              onclick="getCourses('<%- item._id %>')"
                            >
                              <%- item.user ? item.user.name : null %>
                            </td>
                            <td
                              data-toggle="modal"
                              data-target="#detailCourses"
                              onclick="getCourses('<%- item._id %>')"
                            >
                              <%- item.ten %>
                            </td>
                            <td
                              data-toggle="modal"
                              data-target="#detailCourses"
                              onclick="getCourses('<%- item._id %>')"
                            >
                              <%- item.ngayBatDau %> - <%- item.ngayKetThuc %>
                            </td>
                            <td
                              data-toggle="modal"
                              data-target="#detailCourses"
                              onclick="getCourses('<%- item._id %>')"
                            >
                              <%- item.diaDiem %>
                            </td>
                            <td
                              data-toggle="modal"
                              data-target="#detailCourses"
                              onclick="getCourses('<%- item._id %>')"
                            >
                              <%- item.noiDung %>
                            </td>
                            <td
                              data-toggle="modal"
                              data-target="#detailCourses"
                              onclick="getCourses('<%- item._id %>')"
                            >
                              <%- item.hinhThuc %>
                            </td>
                          </tr>
                          <%})%>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% include ../../partials/_footer %>
        </div>
      </div>
    </div>
    <!-- Xoa -->
    <%- include ./Modal/Delete %>
    <!-- Them -->
    <%- include ./Modal/Create %>
    <!-- Edit -->
    <%- include ./Modal/Edit %> 
    <%- include ./Modal/Detail %>
    <script src="/vendors/js/vendor.bundle.base.js"></script>
    <script src="/vendors/js/vendor.bundle.addons.js"></script>
    <script src="/js/off-canvas.js"></script>
    <script src="/js/misc.js"></script>
    <script src="/js/hoverable-collapse.js"></script>
    <%- include ./scriptCourses %> 
    <% include ../../partials/scriptForAll %>
    <script>
      $(document).ready(function() {
        $("#Courses").DataTable({
          scrollX: true
        });
        $("#Table-listEdit").DataTable();
        $("#Table-listNS").DataTable();
      });
    </script>
  </body>
</html>
