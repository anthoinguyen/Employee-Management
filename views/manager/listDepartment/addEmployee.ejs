<div class="modal fade bd-example-modal-lg" id="addEmployee" tabindex="-1" role="dialog" aria-labelledby="addEmployee"
  aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Thêm cán bộ vào phòng/ban</h5>
        <button type="button" class="close closes" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-8">
            <div class="row">

              <table class="table table-striped table-bordered" id="table">
                <thead>
                  <tr>
                    <th>
                      #
                    </th>
                    <th>
                      Số hiệu cán bộ
                    </th>
                    <th>
                      Họ và tên
                    </th>
                  </tr>
                </thead>
                <tbody id="tableBody">

                </tbody>
              </table>

              
            </div>
          </div>
          <div class="col-md-4">
            <div class="row">
              <div class="col-md-8">
                <div class="form-group">
                  <label for="name">Tên Phòng / Ban</label>
                  <input type="text" class="form-control" id="editName1" placeholder="Tên Phòng / Ban" readonly>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label for="exampleFormControlSelect1">Tên rút gọn</label>
                  <input type="text" class="form-control" id="editShortName1" placeholder="Tên rút gọn" readonly>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label for="exampleFormControlSelect1">Họ tên / Mã nhân viên</label>
                  <input type="text" class="form-control" id="idEmployee" onchange="searchInfo()" placeholder="Họ tên / Mã nhân viên">
                </div>
              </div>
            </div>
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary closes" data-dismiss="modal">Đóng</button>
          <button type="submit" class="btn btn-primary" id="submit" onclick="addUserToDepartment()">Thêm mới</button>
        </div>
      </div>
    </div>
  </div>
</div>