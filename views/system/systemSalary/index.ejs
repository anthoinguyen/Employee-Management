<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <title>Lương</title>
  <link rel="stylesheet" href="/vendors/iconfonts/mdi/css/materialdesignicons.min.css" />
  <link rel="stylesheet" href="/css/vendor.bundle.base.css" />
  <link rel="stylesheet" href="/css/vendor.bundle.addons.css" />
  <link rel="stylesheet" href="/vendors/iconfonts/font-awesome/css/font-awesome.css" />
  <link rel="stylesheet" href="/css/style_2.css" />
  <link rel="stylesheet" href="/css/style_1.css" />
  <link rel="shortcut icon" href="/images/favicon.png" />
</head>

<body>
  <div class="container-scroller">
    <% include ../../partials/_navbar %>
    <div class="container-fluid page-body-wrapper">
      <% include ../../partials/_sidebar %>
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title" style="margin-bottom: 10px" >Danh mục lương</h4>
                  <div class="row" style="padding:5px">
                    <div class="col-lg-4">
                      <button style="margin: 0px; width: 110px" class="btn btn-primary" type="button"
                        style="margin: auto" data-toggle="modal" data-target="#addSalary">
                        <span class="icon-holder">
                          <i class="c-white-500 ti-plus"></i>
                        </span>
                        <span class="title">Thêm</span>
                      </button>
                    </div>
                    <div class="col-lg-4"></div>
                    <div class="col-lg-4">
                      <div class="form-group" style="margin-bottom: 5px" >
                        <label for="" style="padding: 0 5px" class="col-sm-12 control-label">Lương cơ bản</label>
                        <div class="row">
                          <div class="col-sm-6">
                            <input id="luongcb" type="number" value="<%- settings.luongCoBan %>" class="form-control" />
                          </div>
                          <div class="col-sm-6">
                            <button style="width: 110px" class="btn btn-primary" id="salaryBasic" type="button"
                              style="margin-bottom: 3px">
                              <span class="icon-holder">
                                <i class="c-white-500 ti-plus"></i>
                              </span>
                              <span class="title">Thay đổi</span>
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="table-responsive">
                    <table id="Table-listSalary" class="table table-bordered table-striped">
                      <thead>
                        <tr>
                          <th></th>
                          <th>STT</th>
                          <th>Mã ngạch</th>
                          <th>Tên ngạch</th>
                          <th>Bảng lương</th>
                          <th>Loại</th>
                          <th>Năm giữ bậc</th>
                          <th>Bậc 1</th>
                          <th>Bậc 2</th>
                          <th>Bậc 3</th>
                          <th>Bậc 4</th>
                          <th>Bậc 5</th>
                          <th>Bậc 6</th>
                          <th>Bậc 7</th>
                          <th>Bậc 8</th>
                          <th>Bậc 9</th>
                          <th>Bậc 10</th>
                          <th>Bậc 11</th>
                          <th>Bậc 12</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% systemSalary.map((item,index) =>{%>
                        <tr>
                          <td>
                            <button type="button" class="btn btn-icons btn-rounded btn-outline-primary"
                              onclick="getSalary('<%- item._id %>')" data-toggle="modal" data-target="#editSalary">
                              <i class="fa fa-edit"></i>
                            </button>
                            <button type="button" class="btn btn-icons btn-rounded btn-outline-primary" onclick="removeSalary('<%- item._id %>')"
                              data-toggle="modal" data-target="#removeSalary">
                              <i class="fa fa-trash-o"></i>
                            </button>
                          </td>
                          <td>
                            <%- index + 1 %>
                          </td>
                          <td>
                            <%- item.maNgach %>
                          </td>
                          <td>
                            <%- item.tenNgach %>
                          </td>
                          <td>
                            <%- item.bangLuong %>
                          </td>
                          <td>
                            <%- item.loai %>
                          </td>
                          <td>
                            <%- item.nam %>
                          </td>
                          <td>
                            <%- item.bacHeso[0].heso %>
                          </td>
                          <td>
                            <%- item.bacHeso[1].heso %>
                          </td>
                          <td>
                            <%- item.bacHeso[2].heso %>
                          </td>
                          <td>
                            <%- item.bacHeso[3].heso %>
                          </td>
                          <td>
                            <%- item.bacHeso[4].heso %>
                          </td>
                          <td>
                            <%- item.bacHeso[5].heso %>
                          </td>
                          <td>
                            <%- item.bacHeso[6].heso %>
                          </td>
                          <td>
                            <%- item.bacHeso[7].heso %>
                          </td>
                          <td>
                            <%- item.bacHeso[8].heso %>
                          </td>
                          <td>
                            <%- item.bacHeso[9].heso %>
                          </td>
                          <td>
                            <%- item.bacHeso[10].heso %>
                          </td>
                          <td>
                            <%- item.bacHeso[11].heso %>
                          </td>
                        </tr>
                        <%})%>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <% include ./createModal %>
        <% include ./editModal %>
        <% include ../../partials/_footer %>
      </div>
    </div>
  </div>

  <script src="/js/vendor.bundle.base.js"></script>
  <script src="/js/vendor.bundle.addons.js"></script>
  <script src="/js/off-canvas.js"></script>
  <script src="/js/misc.js"></script>
  <script src="/js/hoverable-collapse.js"></script>
  <script src="/js/notify.min.js"></script>

  <%- include ./systemSalaryScript %>
  <% include ../../partials/scriptForAll %>

  <script>
    $("#Table-listSalary").DataTable({
      scrollX: true
    });
  </script>
  <script>
    $(document).on("click", "#salaryBasic", function () {
      $.ajax({
        url: "/he-thong/cai-dat/luong-co-ban",
        type: "put",
        dataType: "json",
        data: {
          luongCoBan: $("#luongcb").val()
        },
        success: function (res) {
          if (res) {
            alert("Lương cơ bản thay đổi thành công");
            window.location.reload();
          }
        }
      });
    });
  </script>
</body>

</html>