<div
  class="modal fade bd-example-modal-lg"
  id="newsInfo"
  tabindex="-1"
  role="dialog"
  aria-labelledby="newsInfo"
  aria-hidden="true"
>
  <div class="modal-dialog  modal-lg" role="document" style="max-width: 60%;">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" style='color:#08c' id="newsTitle"></h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="newsBody"></div>
        <br>
        <p id=newsAttached></p>
      </div>
    </div>
  </div>
</div>
