<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <title>Quản lý phân quyền</title>
  <link rel="stylesheet" href="/vendors/iconfonts/mdi/css/materialdesignicons.min.css" />
  <link rel="stylesheet" href="/css/vendor.bundle.base.css" />
  <link rel="stylesheet" href="/css/vendor.bundle.addons.css" />
  <link rel="stylesheet" href="/vendors/iconfonts/font-awesome/css/font-awesome.css" />
  <link rel="stylesheet" href="/css/style_2.css" />
  <link rel="stylesheet" href="/css/style_1.css" />
  <link rel="shortcut icon" href="/images/favicon.png" />
</head>

<body>
  <div class="container-scroller">
    <% include ../../partials/_navbar %>
    <div class="container-fluid page-body-wrapper">
      <% include ../../partials/_sidebar %>
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="title">Danh sách phân quyền truy cập của nhân viên</h4>
                  <div class="row" style="padding:5px">
                    <button style="margin:10px; width: 220px" class="btn btn-primary" type="button" style="margin: auto"
                      data-toggle="modal" data-target="#add" onclick="getNS()">
                      <span class="icon-holder">
                        <i class="c-white-500 ti-plus"></i>
                      </span>
                      <span class="title">Chỉnh sửa quyền truy cập</span>
                    </button>
                    <button style="margin:10px; width: 210px" class="btn btn-primary" type="button" style="margin: auto"
                      data-toggle="modal" data-target="#reset-password" onclick="getNS1()">
                      <span class="icon-holder">
                        <i class="c-white-500 ti-plus"></i>
                      </span>
                      <span class="title">Reset password</span>
                    </button>
                  </div>
                  <div class="table-responsive">
                    <table id="Table-listRole" class="table table-bordered table-striped">
                      <thead>
                        <tr>
                          <th>Mã số cán bộ</th>
                          <th>Họ và tên</th>
                          <th>Phòng - khoa</th>
                          <th>Quyền truy cập</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% usersList.map ((item, index)=> { %>
                        <tr>
                          <td>
                            <%- item.usersCardNumber %>
                          </td>
                          <td>
                            <%- item.name %>
                          </td>
                          <td>
                            <%- item.belongToDepartment ? item.belongToDepartment.name : null %>
                          </td>
                          <td>
                            <% item.roles.map((item1)=>{%>
                            <%- item1 %>
                            <% }) %>
                          </td>
                        </tr>
                        <%})%>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% include ../../partials/_footer %>
      </div>
    </div>
  </div>
  <%- include ./create %>
  <%- include ./reset-password %>

  <script src="/js/vendor.bundle.base.js"></script>
  <script src="/js/vendor.bundle.addons.js"></script>
  <script src="/js/off-canvas.js"></script>
  <script src="/js/misc.js"></script>
  <script src="/js/hoverable-collapse.js"></script>
  <script src="/js/notify.min.js"></script>

  <%- include ./scriptRoles %>
  <% include ../../partials/scriptForAll %>

  <script>
    $("#Table-listRole").DataTable();
  </script>
</body>

</html>