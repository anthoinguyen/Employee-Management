<script>
  $(document).on("click", "#create-Roles", function() {
    let usersList1 = [];
    usersList1 = $(".case:checkbox:checked").map(function() {
        return $(this).val();
      }).get();

    let roles1 = [];
    roles1 = $(".caseRoles:checkbox:checked").map(function() {
        return $(this).val();
      }).get();

    if (
      roles1 == null ||
      roles1 == "" ||
      roles1 == undefined ||
      usersList1 == null ||
      usersList1 == "" ||
      usersList1 == undefined
    ) {
      alert("Vui lòng kiểm tra lại thông tin");
    } else {
      let dataRole = {
        usersList: JSON.stringify(usersList1),
        roles: JSON.stringify(roles1)
      };
      
      $.ajax({
        url: "/users/roles",
        type: "POST",
        dataType: "json",
        data: dataRole,
        success: function(res) {
          if (res) {
            window.location.reload();
          }
        }
      });
    }
  });
</script>

<script>
  $(document).on("click", "#reset", function() {
    let user = $(".case_RP:checkbox:checked").val();

    if (user == "" || user == undefined || user == null) {
      alert("Vui lòng chọn nhân sự");
    } else {
      let password = $("#password").val();
      let rePassword = $("#rePassword").val();

      if (password === rePassword) {
        let dataReset = {
          password,
          rePassword,
          id: user
        };

        $.ajax({
          url: "/users/reset-password",
          type: "POST",
          dataType: "json",
          data: dataReset,
          success: function(res) {
            if (res) {
              alert("Reset password thành công");
              window.location.reload();
            }
          }
        });
      } else {
        alert("Password không trùng khớp");
      }
    }
  });
</script>
